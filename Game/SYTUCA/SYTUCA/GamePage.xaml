<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Game"
             x:Class="SYTUCA.GamePage"
             Title="Play The Game">
    <ScrollView>
        <StackLayout Padding ="20" Orientation="Vertical">
            <Label x:Name="gameEmotion" HorizontalOptions="CenterAndExpand" FontAttributes="Bold"/>
            <Button Text="Take Photo" Clicked="loadCamera" BackgroundColor="Red" TextColor="White"/>
            <Image x:Name="image" HorizontalOptions="Center"/>

            <Label x:Name="topEmotionLabel" HorizontalOptions="Center"/>
            
            <Label x:Name="scoreTag" HorizontalOptions="Center"/>


        </StackLayout>
    </ScrollView>

</ContentPage>